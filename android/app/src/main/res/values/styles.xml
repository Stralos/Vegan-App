<resources>

    <style name="Theme.Vegan" parent="@style/VeganParent" />

    <!-- Base application theme. -->
    <style name="VeganParent" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/vegan_color</item>
        <item name="colorPrimaryDark">@color/vegan_color_darker</item>
        <item name="colorAccent">@color/vegan_accent_color</item>

        <item name="list_selector">@drawable/list_selector</item>
        <item name="menu_selector">@drawable/menu_selector</item>

        <item name="title_text">@android:color/black</item>
        <item name="selection_text">@color/vegan_color</item>
        <item name="body_text">#303030</item>
        <item name="drawer_background">@color/drawer_background</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="actionModeCloseDrawable">@drawable/ic_action_close</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_close</item>


        <item name="actionBarInsetStart">@dimen/keyline_2</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- For Lollipop only -->
    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>


    <style name="SlidingTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Misc -->
    <style name="TabIndicator" />

    <!-- Transparent Action Bar -->
    <style name="TransparentActionBar" parent="">
        <item name="android:background">@null</item>
    </style>

    <style name="TranslucentActionBar" parent="">
        <item name="android:background">@color/translucent_actionbar_background</item>
    </style>

</resources>
